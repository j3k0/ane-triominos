<extension xmlns="http://ns.adobe.com/air/extension/32.0">
    <id>com.triominos.ane.AneTriominos</id>
    <versionNumber>2.0.0</versionNumber>
    <platforms>

        <platform name="iPhone-ARM">
            <applicationDeployment>
                <nativeLibrary>libAneTriominos.a</nativeLibrary>
                <initializer>AneTriominosInitializer</initializer>
                <finalizer>AneTriominosFinalizer</finalizer>
            </applicationDeployment>
        </platform>

        <platform name="Android-ARM"> 
            <applicationDeployment> 
                <nativeLibrary>libAneTriominos.jar</nativeLibrary> 
                <initializer>com.triominos.ane.AneTriominos.Extension</initializer> 
                <finalizer>com.triominos.ane.AneTriominos.Extension</finalizer> 
            </applicationDeployment> 
        </platform> 

        <platform name="Android-ARM64">
            <applicationDeployment>
                <nativeLibrary>libAneTriominos.jar</nativeLibrary>
                <initializer>com.triominos.ane.AneTriominos.Extension</initializer>
                <finalizer>com.triominos.ane.AneTriominos.Extension</finalizer>
            </applicationDeployment>
        </platform>

        <platform name="Android-x86">
            <applicationDeployment>
                <nativeLibrary>libAneTriominos.jar</nativeLibrary>
                <initializer>com.triominos.ane.AneTriominos.Extension</initializer>
                <finalizer>com.triominos.ane.AneTriominos.Extension</finalizer>
            </applicationDeployment>
        </platform>

        <platform name="default"> 
            <applicationDeployment/> 
        </platform> 
    </platforms>
    
</extension>
